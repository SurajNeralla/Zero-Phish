{
    "manifest_version": 3,
    "name": "Zero Phish - Real-Time Protection",
    "version": "1.0",
    "description": "Advanced real-time phishing detection and protection extension.",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "webNavigation"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "PhishGuard Protection"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "content/content.css"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content/content.css",
                "dashboard/index.html",
                "dashboard/assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}